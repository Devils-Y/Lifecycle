<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     xmlns:tools="http://schemas.android.com/tools"
     android:background="#FFF"
     android:orientation="vertical"
     tools:context="com.hy.lifecycle.HomeActivity">

     <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">


          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MainToMain2"/>

               <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Main3RunBtn"/>

               <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Main4FragmentBtn"/>

          </LinearLayout>

     </ScrollView>

</LinearLayout>
